{% extends 'base.html.twig' %}

{% block title %}
    {{ task_name }}
{% endblock %}

{% block page_name %}
    {{ task_name }}
{% endblock %}

{% block main_content %}
    <div class="card card-primary container-fluid">
        <div class="card-body">
            {{ form_start(form, { attr: {class: 'submit-p-form'} }) }}
            <div class="row mt-3">
                <div class="col-md-3">
                    <label>Usuario</label>
                    {{ form_widget(form.id_user) }}
                </div>
                <div class="col-md-3 mt-2 mt-md-0">
                    <label>Nota</label>
                    {{ form_widget(form.texto, { attr:{autocomplete: 'off'}}) }}
                </div>
                <div class="col-md-3">
                    <label> </label>
                    {{ form_row(form.submit, {attr: {class: 'form-control btn btn-primary submit-p-btn'}}) }}
                </div>
                <div class="col-md-3">
                    <label> </label>
                    <a href="{{ path('app_home') }}" class="btn btn-danger form-control">Cancelar</a>
                </div>
                <label class="text-sm mt-2"><span class="text-danger">• </span>Dejar usuario sin seleccionar para notas globales</label>
            </div>
            {{ form_end(form) }}

        </div>
        <!-- /.card-body -->
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let options = document.getElementsByTagName('option');
        for (let i = options.length - 1; i >= 0; i--) {
            if (options[i].innerText.includes('-eliminated-')){
                options[i].remove();
            }
        }
    </script>
{% endblock %}



