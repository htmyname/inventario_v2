{% extends 'base.html.twig' %}

{% block title %}
    Añadir al Invetario
{% endblock %}

{% block page_name %}
    Añadir al Invetario
{% endblock %}

{% block main_content %}
    <div class="card card-primary container-fluid">
        {{ form_start(form, { attr: {class: 'submit-p-form'} }) }}
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="">Cantidad en Inventario</label><label class="form-control">{{ cantidad_actual }} </label>
                </div>
                <div class="col-md-4">
                    {{ form_row(form.cantidad_inventario, { attr: {'autocomplete': 'off'} } ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.add, {attr:{text: 'Actualizar', class: 'btn-primary btn-block submit-p-btn', style: 'margin-top: 32px!important'}}) }}
                </div>
                <div class="col-md-2">
                    <a href="{{ path('app_items') }}"><input class="btn btn-danger btn-block" type="button"
                                                              value="Cancelar" style="margin-top: 32px!important"></a>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
        <!-- /.card-body -->
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('plugins/toastr/toastr.min.js') }}"></script>
    <script src="{{ asset('dist/js/alerts.js') }}"></script>
    {% for msg in app.flashes('error') %}
        <script>
            showAlert('error', '{{ msg }}', 'Error');
        </script>
    {% endfor %}
{% endblock %}

