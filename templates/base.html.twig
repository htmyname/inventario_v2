<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    {% block metas %}

    {% endblock %}

    <title>{% block title %}{% endblock %} - {{ page_name.systemSettings.pagename }}</title>

    {% block stylesheet %}{% endblock %}
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="{{ asset('plugins/fontawesome-free/css/all.min.css') }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css') }}">
    <!-- Custom style -->
    <link rel="stylesheet" href="{{ asset('dist/css/custom.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/toastr/toastr.min.css') }}">
</head>
<body class="hold-transition sidebar-mini">
{% block body %}

{% endblock %}

<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item d-lg-none">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"> <i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button"><i
                            class="fas fa-th-large"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('app_home') }}" class="brand-link">
            <span class="brand-text font-weight-light pl-4"
                  style="font-weight: 800!important;">{{ page_name.systemSettings.pagename }}</span> </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                    data-accordion="false">
                    <li class="nav-item">
                        <a href="{{ path('app_home') }}" class="nav-link"> <i class="nav-icon fas fa-home"></i>
                            <p>
                                Inicio
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_taller') }}" class="nav-link"> <i class="nav-icon fas fa-tools"></i>
                            <p>
                                Taller
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_client') }}" class="nav-link"> <i class="nav-icon fas fa-user-tie"></i>
                            <p>
                                Clientes
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_services') }}" class="nav-link"> <i class="nav-icon fas fa-tasks"></i>
                            <p>
                                Servicios
                            </p>
                        </a>
                    </li>
                    {# <li class="nav-item">
                        <a href="{{ path('app_cotizacion') }}" class="nav-link"> <i class="nav-icon fas fa-calendar-alt"></i>
                            <p>
                                Cotizaciones
                            </p>
                        </a>
                    </li> #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a href="{{ path('app_inventario') }}" class="nav-link">
                                <i class="nav-icon fas fa-archive"></i>
                                <p>
                                    Inventario
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_items') }}" class="nav-link">
                                <i class="nav-icon fas fa-truck-loading"></i>
                                <p>
                                    Productos
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_users') }}" class="nav-link"> <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Usuarios
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_logs') }}" class="nav-link"> <i class="nav-icon fas fa-history"></i>
                                <p>
                                    Registros
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_system') }}" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>
                                    Sistema
                                </p>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="pl-2 pt-3">
                    <div class="row">
                        <h1 class="m-0 text-dark col-md-3 pb-2 pb-md-0">{% block page_name %}{% endblock %}</h1>
                        <div class="m-0 text-dark col-md-9">{% block page_btns %}{% endblock %}</div>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content">
            <div class="container-fluid">
                <div class="row p-1">
                    {% block main_content %}

                    {% endblock %}
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="{{ asset('dist/img/avatar5.png') }}" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        {{ app.user.name }}
                    {% endif %}
                </div>
            </div>
            <div class="row pl-3 mb-3">
                <a href="{{ path('app_profile') }}"><i class="nav-icon fas fa-user-cog"></i> Perfil</a>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="row pl-3 mb-3">
                    <a href="{{ path('app_system_configuration') }}"><i class="nav-icon fas fa-cog"></i> Configuraci√≥n</a>
                </div>
            {% endif %}
            <div class="row pl-3 mb-3">
                <a href="{{ path('app_logout') }}"><i class="nav-icon fas fa-sign-out-alt"></i> Salir</a>
            </div>
        </div>
    </aside>
    <!-- /.control-sidebar -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            Symfony 5 Web App v21.8.22
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2021{{ page_name.dateCopyright }} [D_n]Codes</strong>
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<!-- AdminLTE App -->
<script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
<script src="{{ asset('dist/js/prevent.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
